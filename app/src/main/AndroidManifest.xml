<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.dportshipper">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DportidV1NewDesain"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.inputDataDiri.TypeUsahaActivity"
            android:exported="false" />
        <activity
            android:name=".view.inputDataDiri.InputDataDiriActivity"
            android:exported="false" />
        <activity
            android:name=".view.login.VerifikasiEmailPinActivity"
            android:exported="false" />
        <activity
            android:name=".view.login.ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name=".view.login.PinVerifikasiActivity"
            android:exported="false" />
        <activity
            android:name=".view.login.PinVerifikasiLupaPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".view.login.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".view.login.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.DPortShipper.custom">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.homeMenu.HomeActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DPortShipper.custom2"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <activity
            android:name=".view.login.RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.DPortShipper.custom" />
        <activity
            android:name=".view.login.ResetPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".view.login.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".view.login.LoginRegisterActivity"
            android:exported="true" />
    </application>

</manifest>