<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rectangle_4"
    android:layout_marginBottom="10dp"
    android:id="@+id/header">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_transporter_rekomendasi"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nama_perusahaan"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_transporter_rekomendasi"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Perusahaan XYZ"/>

    <ImageView
        android:id="@+id/iv_location"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/location"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_nama_perusahaan"
        app:layout_constraintEnd_toStartOf="@id/tv_tujuan"
        app:layout_constraintBottom_toBottomOf="@id/tv_nama_perusahaan"/>

    <TextView
        android:id="@+id/tv_tujuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="DKI Jakarta"/>

    <View
        android:id="@+id/garis_putus"
        app:layout_constraintTop_toBottomOf="@id/iv_transporter_rekomendasi"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentLeft="true"
        android:layout_marginHorizontal="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/garis_putus_putus"
        />

    <TextView
        android:id="@+id/judul_armada"
        app:layout_constraintTop_toBottomOf="@id/garis_putus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="Armada :"
        android:textAppearance="@style/recipient_s"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/tv_armada"
        app:layout_constraintTop_toBottomOf="@id/garis_putus"
        app:layout_constraintStart_toEndOf="@id/judul_armada"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="18 unit"
        android:textAppearance="@style/recipient_s"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/judul_jangkauan"
        app:layout_constraintTop_toBottomOf="@id/garis_putus"
        app:layout_constraintEnd_toStartOf="@id/tv_jangkauan"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Jangkauan :"
        android:textAppearance="@style/recipient_s"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/tv_jangkauan"
        app:layout_constraintTop_toBottomOf="@id/garis_putus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="Jangkauan"
        android:textAppearance="@style/recipient_s"
        android:gravity="top"
        />

</androidx.constraintlayout.widget.ConstraintLayout>