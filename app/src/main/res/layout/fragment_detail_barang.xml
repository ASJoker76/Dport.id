<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/rectangle_3"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/rectangle_3"
            android:elevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:id="@+id/ll_back"
                    android:layout_width="0px"
                    android:layout_height="40dp"
                    android:layout_weight="15">

                    <LinearLayout
                        android:id="@+id/ly_back"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/rectangle_1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_back" />

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="0px"
                    android:layout_height="40dp"
                    android:layout_weight="70"
                    android:gravity="center"
                    android:text="@string/detail_barang"
                    android:textAppearance="@style/daftar_akun" />

                <ImageView
                    android:layout_width="0px"
                    android:layout_height="40dp"
                    android:layout_weight="15" />
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detail Barang"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <TextView
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="40"
                                android:gravity="top"
                                android:text="Jenis Barang  "
                                android:textAppearance="@style/recipient_s"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:gravity="top"
                                android:text=":"
                                android:textAppearance="@style/recipient_s" />

                            <TextView
                                android:id="@+id/tv_jenis_barang"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:gravity="right"
                                android:textAppearance="@style/recipient_s"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <TextView
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="40"
                                android:gravity="top"
                                android:text="Berat Barang  "
                                android:textAppearance="@style/recipient_s"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:gravity="top"
                                android:text=":"
                                android:textAppearance="@style/recipient_s" />

                            <TextView
                                android:id="@+id/tv_berat_barang"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:gravity="right"
                                android:textAppearance="@style/recipient_s"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <TextView
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="40"
                                android:gravity="top"
                                android:text="Jumlah Barang  "
                                android:textAppearance="@style/recipient_s"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:gravity="top"
                                android:text=":"
                                android:textAppearance="@style/recipient_s" />

                            <TextView
                                android:id="@+id/tv_jumlah_barang"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:gravity="right"
                                android:textAppearance="@style/recipient_s"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <TextView
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="40"
                                android:gravity="top"
                                android:text="Dimensi  "
                                android:textAppearance="@style/recipient_s"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:gravity="top"
                                android:text=":"
                                android:textAppearance="@style/recipient_s" />

                            <TextView
                                android:id="@+id/tv_dimensi"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:gravity="right"
                                android:textAppearance="@style/recipient_s"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <TextView
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="40"
                                android:gravity="top"
                                android:text="Muatan  "
                                android:textAppearance="@style/recipient_s"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:gravity="top"
                                android:text=":"
                                android:textAppearance="@style/recipient_s" />

                            <TextView
                                android:id="@+id/tv_muatan"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:gravity="right"
                                android:textAppearance="@style/recipient_s"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <TextView
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="40"
                                android:gravity="top"
                                android:text="Nilai Barang  "
                                android:textAppearance="@style/recipient_s"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:gravity="top"
                                android:text=":"
                                android:textAppearance="@style/recipient_s" />

                            <TextView
                                android:id="@+id/tv_nilai_barang"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:gravity="right"
                                android:textAppearance="@style/recipient_s"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:layout_marginBottom="20dp"
                            android:weightSum="100">

                            <TextView
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="40"
                                android:gravity="top"
                                android:text="Catatan  "
                                android:textAppearance="@style/recipient_s"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:gravity="top"
                                android:text=":"
                                android:textAppearance="@style/recipient_s" />

                            <TextView
                                android:id="@+id/tv_catatan"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:gravity="right"
                                android:textAppearance="@style/recipient_s"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>