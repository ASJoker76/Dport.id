<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_urutkan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urutkan:"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_semua"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_urutkan"
            app:layout_constraintStart_toStartOf="@id/tv_urutkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_transparant">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="Semua"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_termurah"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_urutkan"
            app:layout_constraintStart_toEndOf="@id/cv_semua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_transparant"
                android:backgroundTint="@color/gray_btn_bg_color">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="Termurah"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_urutkan"
            app:layout_constraintStart_toEndOf="@id/cv_termurah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_transparant"
                android:backgroundTint="@color/gray_btn_bg_color">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="Termahal"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/v_garis_putus"
            app:layout_constraintTop_toBottomOf="@id/cv_semua"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/garis_putus_putus_line"/>

        <TextView
            android:id="@+id/tv_lokasi_transporter"
            app:layout_constraintTop_toBottomOf="@id/v_garis_putus"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi Transporter:"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_semua_lokasi"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_lokasi_transporter"
            app:layout_constraintStart_toStartOf="@id/tv_urutkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_transparant">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="Semua"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_terdekat"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_lokasi_transporter"
            app:layout_constraintStart_toEndOf="@id/cv_semua_lokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_transparant"
                android:backgroundTint="@color/gray_btn_bg_color">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="Terdekat"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_lokasi_transporter"
            app:layout_constraintStart_toEndOf="@id/cv_terdekat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_transparant"
                android:backgroundTint="@color/gray_btn_bg_color">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="Terjauh"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/v_garis_putus_2"
            app:layout_constraintTop_toBottomOf="@id/cv_semua_lokasi"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/garis_putus_putus_line"/>

        <TextView
            android:id="@+id/tv_harga"
            app:layout_constraintTop_toBottomOf="@id/v_garis_putus_2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga:"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_harga"
            app:layout_constraintStart_toStartOf="@id/tv_urutkan">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_harga_teredah"
                android:layout_marginTop="20dp"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="50"
                app:cardCornerRadius="18dp"
                android:layout_marginHorizontal="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray_btn_bg_color"
                        android:weightSum="100"
                        android:gravity="center">

                        <TextView
                            android:layout_width="0px"
                            android:layout_height="50dp"
                            android:layout_weight="30"
                            android:text="Rp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            />

                        <EditText
                            android:layout_width="0px"
                            android:layout_height="50dp"
                            android:layout_weight="70"
                            android:textSize="14sp"
                            android:background="#00000000"
                            android:hint="Harga Terendah"
                            />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_harga_tertinggi"
                android:layout_marginTop="20dp"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="50"
                app:cardCornerRadius="18dp"
                android:layout_marginHorizontal="5dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray_btn_bg_color"
                        android:weightSum="100"
                        android:gravity="center">

                        <TextView
                            android:layout_width="0px"
                            android:layout_height="50dp"
                            android:layout_weight="30"
                            android:text="Rp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            />

                        <EditText
                            android:layout_width="0px"
                            android:layout_height="50dp"
                            android:layout_weight="70"
                            android:textSize="14sp"
                            android:background="#00000000"
                            android:hint="Harga Tertinggi"
                            />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>